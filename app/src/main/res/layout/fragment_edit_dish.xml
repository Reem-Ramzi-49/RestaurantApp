<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:padding="16dp">

     <FrameLayout
        android:id="@+id/editDishContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/editDishImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircularImage"
            android:contentDescription="@string/dish_image"/>

        <ImageView
            android:id="@+id/editCameraIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/icon_camera"
            android:background="@drawable/circle_white"
            android:padding="6dp"
            android:elevation="4dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="4dp"/>
    </FrameLayout>

    <!-- النموذج -->
    <LinearLayout
        android:id="@+id/editDishForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/editDishContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dish_name"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etEditDishName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/dish_name"
            android:background="@drawable/rounded_white_box"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dish_description"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etEditDishDesc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/dish_description"
            android:background="@drawable/rounded_white_box"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dish_price"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etEditDishPrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/dish_price"
            android:background="@drawable/rounded_white_box"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp"/>

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image_url"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etEditDishImageUrl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/image_url"
            android:background="@drawable/rounded_white_box"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:inputType="textUri"
            android:layout_marginBottom="12dp"/>

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dish_category"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>
        <Spinner
            android:id="@+id/spinnerEditCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_white_box"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

     <Button
        android:id="@+id/btnUpdateDish"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/update_dish"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/editDishForm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="24dp"
        app:cornerRadius="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
