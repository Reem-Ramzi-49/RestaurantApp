<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.RestaurantApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>

        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>

    </style>



    <style name="CircularImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



    <style name="DialogButtonOrange" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColor">@color/orange</item>
    </style>


    <style name="Theme.RestaurantApp" parent="Base.Theme.RestaurantApp" />

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="OptionCardStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="RowItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="RowItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">#1F2A44</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ChevronEnd">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:tint">#B0B8C6</item>
        <item name="android:layout_gravity">end</item>
    </style>

</resources>